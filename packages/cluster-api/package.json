{
	"name": "@bella/cluster-api",
	"description": "Proxy API for Cluster entities and workflows",
	"sideEffects": false,
	"type": "module",
	"imports": {
		"#src/*": "./dist/src/*"
	},
	"exports": {
		".": {
			"default": "./dist/src/mod.js",
			"types": "./dist/src/mod.d.ts"
		}
	},
	"scripts": {
		"build": "tsc --noCheck",
		"dev": "tsc --noCheck",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"typecheck": "tsc --build --noEmit"
	},
	"dependencies": {
		"@bella/cluster-schema": "workspace:*",
		"@effect/cluster": "catalog:",
		"@effect/platform": "catalog:",
		"@effect/workflow": "catalog:",
		"effect": "catalog:"
	},
	"devDependencies": {
		"@bella/eslint-config": "workspace:*",
		"@bella/typescript-config": "workspace:*",
		"eslint": "catalog:",
		"typescript": "catalog:"
	}
}
