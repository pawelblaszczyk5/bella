{
	"name": "@bella/design-system",
	"description": "Everything related to shared UI concepts across the app. CSS reset, components, theming, styles",
	"sideEffects": false,
	"type": "module",
	"imports": {
		"#src/*": "./dist/src/*"
	},
	"exports": {
		"./css-reset": "./src/css-reset.css",
		"./components/button": {
			"default": "./dist/src/components/button.jsx",
			"types": "./dist/src/components/button.d.ts"
		},
		"./styles/utilities": {
			"default": "./dist/src/styles/utilities.js",
			"types": "./dist/src/styles/utilities.d.ts"
		},
		"./theme/color.stylex": {
			"default": "./dist/src/theme/color.stylex.js",
			"types": "./dist/src/theme/color.stylex.d.ts"
		}
	},
	"scripts": {
		"build": "tsc --noCheck",
		"dev": "tsc --noCheck",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"typecheck": "tsc --build --noEmit"
	},
	"dependencies": {
		"@bella/stylex": "workspace:*",
		"react": "catalog:",
		"react-dom": "catalog:"
	},
	"devDependencies": {
		"@bella/eslint-config": "workspace:*",
		"@bella/typescript-config": "workspace:*",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"eslint": "catalog:",
		"typescript": "catalog:"
	}
}
