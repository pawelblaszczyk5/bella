{
	"name": "@bella/design-system",
	"description": "Everything related to shared UI concepts across the app. CSS reset, components, theming, styles",
	"sideEffects": false,
	"type": "module",
	"imports": {
		"#src/*": "./dist/src/*"
	},
	"exports": {
		"./css-reset": "./src/css-reset.css",
		"./styles/utilities": {
			"default": "./dist/src/styles/utilities.js",
			"types": "./dist/src/styles/utilities.d.ts"
		},
		"./styles/typography": {
			"default": "./dist/src/styles/typography.js",
			"types": "./dist/src/styles/typography.d.ts"
		},
		"./theme/animation.stylex": {
			"default": "./dist/src/theme/animation.stylex.js",
			"types": "./dist/src/theme/animation.stylex.d.ts"
		},
		"./theme/color.stylex": {
			"default": "./dist/src/theme/color.stylex.js",
			"types": "./dist/src/theme/color.stylex.d.ts"
		},
		"./theme/radii.stylex": {
			"default": "./dist/src/theme/radii.stylex.js",
			"types": "./dist/src/theme/radii.stylex.d.ts"
		},
		"./theme/spacing.stylex": {
			"default": "./dist/src/theme/spacing.stylex.js",
			"types": "./dist/src/theme/spacing.stylex.d.ts"
		},
		"./theme/typography.stylex": {
			"default": "./dist/src/theme/typography.stylex.js",
			"types": "./dist/src/theme/typography.stylex.d.ts"
		}
	},
	"scripts": {
		"build": "tsc --noCheck",
		"dev": "tsc --noCheck",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"typecheck": "tsc --build --noEmit"
	},
	"dependencies": {
		"@bella/stylex": "workspace:*",
		"react": "catalog:",
		"react-dom": "catalog:"
	},
	"devDependencies": {
		"@bella/eslint-config": "workspace:*",
		"@bella/typescript-config": "workspace:*",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"eslint": "catalog:",
		"typescript": "catalog:"
	}
}
