{
	"name": "@bella/id-generator",
	"description": "ID generator utility functions",
	"sideEffects": false,
	"type": "module",
	"imports": {
		"#src/*": "./dist/src/*"
	},
	"exports": {
		"./promise": {
			"default": "./dist/src/promise.js",
			"types": "./dist/src/promise.d.ts"
		},
		"./effect": {
			"default": "./dist/src/effect.js",
			"types": "./dist/src/effect.d.ts"
		}
	},
	"scripts": {
		"build": "tsc --noCheck",
		"dev": "tsc --noCheck",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"typecheck": "tsc --build --noEmit"
	},
	"dependencies": {
		"@bella/assert": "workspace:*",
		"effect": "catalog:"
	},
	"devDependencies": {
		"@bella/eslint-config": "workspace:*",
		"@bella/typescript-config": "workspace:*",
		"@types/node": "catalog:",
		"eslint": "catalog:",
		"typescript": "catalog:"
	}
}
